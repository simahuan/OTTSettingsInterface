<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pisen.ott.settings.upgrade.VersionDetailActivity" >

    <include layout="@layout/settings_actionbar" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/space_80"
        android:layout_marginRight="@dimen/space_80"
        android:layout_marginBottom="@dimen/space_80"
        android:layout_marginTop="@dimen/space_20"
        android:layout_gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_info"
                android:textColor="#0084FF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtUpdateInfo"
                style="@style/AppEditText.MultiLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:enabled="false"
                android:lineSpacingExtra="11dp"
                android:paddingTop="12dp"
                android:scrollbars="vertical"
                android:text="@string/fixed_item"
                android:textColor="#A5A6AA"
                android:textScaleX="0.9"
                android:textSize="16sp" >

                <requestFocus />
            </EditText>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>