<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.pisen.ott.settings.about.AboutActivity" >

    <include layout="@layout/settings_actionbar" />

    <com.pisen.ott.widget.FaddingFrameLayout
        android:layout_width="@dimen/uitable_width"
        android:layout_height="wrap_content" >

        <ScrollView
            android:layout_width="@dimen/uitable_width"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/space_80"
            android:layout_marginTop="@dimen/space_80"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/ab_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_user_agreement" />

                <TextView
                    style="@style/body_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_user_agreement_data" />
            </LinearLayout>
        </ScrollView>
    </com.pisen.ott.widget.FaddingFrameLayout>

</LinearLayout>