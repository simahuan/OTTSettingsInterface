<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- head -->

    <include layout="@layout/settings_actionbar" />

    <!-- body -->

    <LinearLayout
        android:layout_width="@dimen/uitable_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:orientation="vertical" >
        <!-- 忽略此网络 -->
        <RelativeLayout
            android:id="@+id/lrel_wifi_detail_disconnect"
            style="@style/AppTableRow.Top"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/table_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ignore_this_network" />

            <TextView
                style="@style/table_row_content_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                 />
        </RelativeLayout>
        <!-- 
        <RelativeLayout
            style="@style/AppTableRow.Bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/table_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动加入" />

            <TextView
                style="@style/table_row_content_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="已开启" />
        </RelativeLayout>
         -->
        <!-- IP -->

        <RelativeLayout
            style="@style/AppTableRow.Top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <TextView
                style="@style/table_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ip_address" />

            <TextView
                android:id="@+id/txt_wifi_detail_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                 />
        </RelativeLayout>
        <!-- 子网掩码 -->

        <RelativeLayout
            style="@style/AppTableRow.Middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/table_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subnet_mask" />

            <TextView
                android:id="@+id/txt_wifi_detail_mask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                 />
        </RelativeLayout>
        <!-- 路由器 -->

        <RelativeLayout
            style="@style/AppTableRow.Middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/table_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/router" />

            <TextView
                android:id="@+id/txt_wifi_detail_gateway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                 />
        </RelativeLayout>
        <!-- DNS -->

        <RelativeLayout
            style="@style/AppTableRow.Bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/table_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dns" />

            <TextView
                android:id="@+id/txt_wifi_detail_dns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:textSize="24sp"
                 />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>