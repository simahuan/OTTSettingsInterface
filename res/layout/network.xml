<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/settings_actionbar" />

    <com.pisen.ott.widget.FocusLinearLayout
        android:id="@+id/netSettingsLayout"
        style="@style/AppTable" >

        <TextView
            style="@style/table_title"
            android:text="@string/wireless_and_network" />

        <RelativeLayout
            android:id="@+id/wifiSettings"
            style="@style/AppTableRow.Top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/table_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wireless_network" />

            <TextView
                android:id="@+id/setWifi"
                style="@style/table_row_content_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/wifi_setup" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/netSettings"
            style="@style/AppTableRow.Bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/table_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ethernet_connect" />

            <TextView
                android:id="@+id/setNetWork"
                style="@style/table_row_content_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/setup_pppoe_for_network" />
        </RelativeLayout>
    </com.pisen.ott.widget.FocusLinearLayout>

</LinearLayout>